<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Preference -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppThemeNoBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">

    </style>

    <style name="ButtonTheme" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/style_button_padding</item>
        <item name="android:paddingEnd">@dimen/style_button_padding</item>
    </style>

    <!-- Main activity - first task button -->
    <style name="ButtonThemeSmall" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/style_button_padding_small</item>
        <item name="android:paddingEnd">@dimen/style_button_padding_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Editor -->
    <style name="WhiteRadioButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <!-- Widget -->
    <style name="ButtonThemeWidget" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/style_button_padding_widget</item>
        <item name="android:paddingEnd">@dimen/style_button_padding_widget</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Time picker -->
    <!-- Style for an Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="AppAlertDialogContent"
        parent="Theme.AppCompat.DayNight">
        <!-- To keep the color of EditText -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppPreference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

