<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoji.dailytask">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:launchMode="singleTop" >
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/AppThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TaskEditorActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shoji.dailytask.ui.MainActivity" />
        </activity>

        <provider
            android:name=".provider.generated.TaskProvider"
            android:authorities="com.example.shoji.dailytask.provider.tasks"
            android:exported="true" />

        <activity
            android:name=".ui.SettingsActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shoji.dailytask.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.TaskHistoryActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shoji.dailytask.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.TaskDetailActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shoji.dailytask.ui.MainActivity" />
        </activity>
    </application>

</manifest>